<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="NN.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NN"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="NN">

    <NavigationView x:Name="xMain" PaneDisplayMode="LeftCompact" Loaded="OnLoad" ItemInvoked="ItemInvoked"  >
        <NavigationView.MenuItems>
            <NavigationViewItem  Icon="Globe" Content="{x:Bind txt(6)}" x:Name="ViewNetwork" >
                <NavigationViewItem.KeyboardAccelerators>
                    <KeyboardAccelerator Key="F2" />
                </NavigationViewItem.KeyboardAccelerators>
            </NavigationViewItem>
        </NavigationView.MenuItems>
        <Frame x:Name="contentFrame"/>
    </NavigationView>

</Window>
